{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017", "ESNext.Intl", "es6"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "*": ["./src/*"]
    },
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
